<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:thicknessRatio="16.0" android:useLevel="false">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0">
            <shape android:shape="ring" android:thicknessRatio="16.0" android:useLevel="true">
                <gradient android:startColor="@color/red" android:endColor="@color/background" android:angle="0.0" android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>